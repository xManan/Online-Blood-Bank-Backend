{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@/resources/*": [ "resources/*" ],
            "@/utils/*": [ "utils/*" ],
            "@/middleware/*": [ "middleware/*" ]
        }
    },
    "lib": ["es2015"]
}
